    <t t-extend="PaymentScreenWidget">
        <t t-jquery=".payment-buttons" t-operation="append">
            <div t-attf-class='button js_boleta highlight'>
                <i class='fa fa-file' /> Boleta
            </div>
            <div t-attf-class='button js_factura'>
                <i class='fa fa-file-text-o' /> Factura
            </div>
        </t>
    </t>
